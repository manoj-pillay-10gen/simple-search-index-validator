{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "vectorIndex.json",
  "type": "object",
  "description": "Define your Atlas Vector Search Index",
  "properties": {
    "type": {
      "type": "string",
      "const": "vectorSearch"
    },
    "fields": {
      "type": "array",
      "items": {
        "type": "object",
        "oneOf": [
          {
            "$ref": "vectorComponents/fields.json"
          },
          {
            "$ref": "vectorComponents/filter.json"
          }
        ]
      }
    }
  },
  "required": [
    "type",
    "fields"
  ],
  "additionalProperties": false
}
